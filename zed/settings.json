{
  "icon_theme": "Zed (Default)",
  "theme": "Catppuccin Espresso (Blur) [Light]",
  "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  "buffer_font_size": 18,
  "ui_font_family": "JetBrainsMono Nerd Font Mono",
  "ui_font_size": 16,
  "vim_mode": true,
  "buffer_line_height": { "custom": 1.4 },
  "buffer_font_features": { "calt": true },
  "buffer_font_weight": 400,
  "ui_font_weight": 400,
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "agent_review": false,
    "code_actions": false,
    "selections_menu": false,
  },
  "scroll_beyond_last_line":"off",
  "project_panel": { "entry_spacing": "standard", "dock":"right", "scrollbar": { "show": "never"} },
  "tabs": { "file_icons": true, "show_diagnostics": "off" },
  "format_on_save": "off",
  "tab_size": 4,
  "hard_tabs": true,
  "notification_panel": {"button": false},
  "relative_line_numbers": "enabled",
  "collaboration_panel": { "button": false },
  "scrollbar": {
  	"show": "never",
  },
  "minimap": { "show": "never"},
  "tab_bar": { "show_nav_history_buttons": false, },
  "agent": {"enabled": false,},
  "debugger": {"button": false},
  "inline_code_actions": false,
  "formatter": "prettier",
  "prettier": {
      "semi": false,
      "allowed": true,
      "tabWidth": 2,
      "bracketSpacing": true,
      "jsxSingleQuote": true,
      "singleQuote": true
    },
    "languages": {
	    "JavaScript": {
	        "formatter": {
	        "external": {
	            "command": "prettier",
	            "arguments": ["--stdin-filepath", "{buffer_path}"]
	        }
	        },
	        "format_on_save": "on"
	    },
	    "HTML": {
	        "format_on_save": "on"
	    },
		"TypeScript": {
	        "formatter": {
	        "external": {
	            "command": "prettier",
	            "arguments": ["--stdin-filepath", "{buffer_path}"]
	        }
	        },
	        "format_on_save": "on"
	    },
		"TSX": {
	        "formatter": {
	        "external": {
	            "command": "prettier",
	            "arguments": ["--stdin-filepath", "{buffer_path}"]
	        }
	        },
	        "format_on_save": "on"
	    },

    }
}
